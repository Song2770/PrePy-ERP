# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prepy_erp

# Application Settings
APP_ENV=development  # development, testing, production
APP_SECRET_KEY=your_secret_key  # Generate a secure key
APP_ALLOW_ORIGINS=[ "http://127.0.0.1:3000", "http://localhost:3000"]

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key  # Generate a secure key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email Settings
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=notifications@example.com
EMAILS_FROM_NAME=PrePy ERP

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=50  # In MB 